<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!--    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>-->\
    <% if (errors && errors.length > 0) { %>
        <script>alert("<%= errors[0] %>");</script>
    <% } %>
    <% if (success && success.length > 0) { %>
        <script>alert("<%= success[0] %>");</script>
    <% } %>
</head>

<body>

<section class="vh-100" style="background-color: #eee;">

    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">

                    <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab"
                               aria-controls="pills-login" aria-selected="true">Login</a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="#pills-register" role="tab"
                               aria-controls="pills-register" aria-selected="false">Rejestracja</a>
                        </li>
                    </ul>

                    <div class="tab-content">

                        <div class="tab-pane fade show active " id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                            <form action="/login" method="POST">

                                <div class="text-center mb-3">
                                    <p>Zaloguj się:</p>
                                </div>



                                <!-- login-->
                                <div class="form-outline mb-4">
                                <label for="username" class="form-label">Login</label>
                                <input type="text" class="form-control" id="username" name="username">
                            </div>

                                <!--                                    password-->
                                <div class="form-outline mb-4">
                                    <input type="password" id="loginPassword" class="form-control" name="password" />
                                    <label class="form-label" for="loginPassword">Haslo</label>

                                </div>


                                <div class="row mb-4">
                                </div>
                                <button type="submit" class="btn btn-primary btn-block mb-4">Zaloguj sie</button>
                                                            </form>
                        </div>
                        <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">

                            <form action="/register" method="POST">
                                <div class="text-center mb-3">
                                    <p>Zarejestruj sie</p>

                                </div>
                                <p class="text-center">or:</p>
                                <div class="form-outline mb-4">
                                    <label for="username" class="form-label">Login</label>
                                    <input type="text" class="form-control" id="username" name="username">
                                </div>

                                <div class="form-outline mb-4">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="email" name="email">
                                </div>



                                <div class="form-outline mb-4">
                                    <label for="password" class="form-label">Haslo</label>
                                    <input type="password" class="form-control" id="password" name="password">
                                </div>


                                <div class="form-outline mb-4">
                                    <label for="passwordConfirm" class="form-label">Potwierdź hasło</label>
                                    <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm">
                                </div>
                                <button type="submit" class="btn btn-primary btn-block mb-3">Rejestracja</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>


<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tabLogin = document.getElementById('tab-login');
        const tabRegister = document.getElementById('tab-register');
        const pillsLogin = document.getElementById('pills-login');
        const pillsRegister = document.getElementById('pills-register');
        const registerForm = document.querySelector('#pills-register form');
        tabLogin.addEventListener('click', function(event) {
            event.preventDefault();

            tabRegister.classList.remove('active');
            tabLogin.classList.add('active');

            pillsRegister.classList.remove('active', 'show');
            pillsLogin.classList.add('active', 'show');

        });

        tabRegister.addEventListener('click', function(event) {
            event.preventDefault();


            tabLogin.classList.remove('active');
            tabRegister.classList.add('active');


            pillsLogin.classList.remove('active', 'show');
            pillsRegister.classList.add('active', 'show');

        });
        registerForm.addEventListener('submit', function(event) {
            event.preventDefault();

            const password = document.getElementById('password').value;
            const passwordConfirm = document.getElementById('passwordConfirm').value;

            if (password!==passwordConfirm) {
                alert('Hasła nie są takie same!');
                return;
            }
            this.submit();
        });
    });

</script>


</body>
</html>

</body>
</html>