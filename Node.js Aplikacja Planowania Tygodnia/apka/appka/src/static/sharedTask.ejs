<!-- sharedTask.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shared Tasks</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        li {
            word-wrap: break-word;
        }
        ul {
            list-style-type: none;
        }

    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
        <a class="navbar-brand" href="/home">Logo</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/mySharedTasks">Moje udostępnione zadania</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/sharedTasks">Udostępnione zadania</a>
                </li>
                <form class="d-flex" action="/logout" method="post">
                    <button class="btn btn-outline-light" type="submit">Logout</button>
                </form>
            </ul>
        </div>
    </div>
</nav>
<div class="container mt-4">
    <h1 class="text-center mb-4">Udostępnione Zadania</h1>
    <div class="table-responsive">
        <div class="col">
            <table class="table">
                <thead>
                <tr>
                    <th>Zadanie</th>
                    <th>Status</th>
                    <th>Udostępnił</th>
                    <th>Akcje</th>
                </tr>
                </thead>
                <tbody>
                <% sharedTasks.forEach(task => { %>
                    <tr>
                        <td><%= task.task %></td>
                        <td><%= task.task_status %></td>
                        <td><%= task.shared_by_username %></td>
                        <td>
                            <form action="/change-status/<%= task.shared_task_id %>" method="POST">
                                <% if (task.task_status === 'Zrobiony') { %>
                                    <button type="submit" class="btn btn-danger">Niezrobiony</button>
                                <% } else { %>
                                    <button type="submit" class="btn btn-primary">Zrobiony</button>
                                <% } %>
                            </form>
                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
